{% set form = data.sections.purchaseform %}
<form class="card card-outline--2 purchase-box" role="form">
  <div class="card-block">
    <div class="form-group">
      <div class="card-header">
        <h4 class="card-heading text-uppercase">
          {{form.title}}
        </h4>
      </div>
    </div>
    <div class="form-group">
      <label class="text-muted text-uppercase" for="select-flavor">{{form.flavor.title}}</label>
      <select name="select-flavor" id="select-flavor" class="form-control">
        {% for flavor in form.flavor.items %}
          <option value="{{flavor}}">{{flavor}}</option>
        {% endfor %}
    </select>
    </div>
    <div class="form-group">
      <label class="text-muted text-uppercase" for="select-quantity">{{form.quantity.title}}</label>
      <select name="select-quantity" id="select-quantity" class="form-control">
        {% for i in range(1, form.quantity.count + 1) -%}
        <option value="{{i}}">{{i}} item{% if i > 1 %}s {% endif %}</option>
        {%- endfor %}
      </select>
    </div>
  </div>
  <div class="card-block card-outline--top bg-color--gray">
    <div class="text-center form-group text-muted lead ">
      ${{form.price}}
    </div>
    <div class="form-group text-center">
      <a href="#{{datepicker.id}}" class="text-muted" >
        {{form.cleanseCTA}}
      </a>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-md btn-block btn-warning text-uppercase" data-toggle="modal" data-target="#{{datepicker.id}}">
        {{form.addToCart.buttonText}}
      </button>
    </div>
  </div>
</form>
