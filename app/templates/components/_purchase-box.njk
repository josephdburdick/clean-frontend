{% set form = data.sections.purchaseform %}
<form class="card card-outline--2 purchase-box" role="form">
  <div class="card-block">
    <div class="form-group">
      <div class="card-block_header">
        <h4 class="card-heading text-uppercase">
          {{form.title}}
        </h4>
      </div>
    </div>

    <div class="form-group">
      <label class="text-muted text-uppercase" for="select-flavor">{{form.flavor.title}}</label>
      <select name="flavor" id="select-flavor" class="form-control">
        {% for flavor in form.flavor.items %}
          <option value="{{flavor}}">{{flavor}}</option>
        {% endfor %}
      </select>
    </div>

    <div class="form-group">
      <label class="text-muted text-uppercase" for="select-quantity">{{form.quantity.title}}</label>
      <select name="quantity" id="select-quantity" class="form-control">
        {% for i in range(1, form.quantity.count + 1) -%}
        <option value="{{i}}">{{i}} item{% if i > 1 %}s {% endif %}</option>
        {%- endfor %}
      </select>
    </div>

    <div class="form-group">
      <label class="text-muted text-uppercase" for="select-quantity">{{form.startDate.title}}</label>
      <select name="date" id="select-date" class="form-control">
        {% for option in form.startDate.dates -%}
        <option value="{{option.date}}">{{option.text}}</option>
        {%- endfor %}
      </select>
    </div>
  </div>
  <div class="card-block card-outline--top bg-color--gray">
    <div class="text-xs-center form-group purchase-box_price ">
      ${{ form.price }}
    </div>
    <div class="form-group text-xs-center">
      <button type="submit" class="btn btn-md btn-warning text-uppercase">
        {{form.addToCart.buttonText}}
      </button>
    </div>
  </div>
</form>
