            </fieldset>
            <fieldset id="step-2">
              <h2 class="fs-title">Hi, <u>Lorem</u></h2>
              <h3 class="fs-subtitle">How many people total in your group?</h3>

              <input type="number" name="people-count" placeholder="2" />
              <input type="button" name="previous" class="btn btn-link action-button" value="Previous" />
              <a href="#step-1" class="btn btn-link ">
                <i class="fa fa-larrow"></i> Go Back
              </a>
              <a href="#step-3" class="btn btn-lg btn-warning text-uppercase next action-button">
                Next Step
              </a>
            </fieldset>
            <fieldset>
              <h2 class="fs-title">Personal Details</h2>
              <h3 class="fs-subtitle">We will never sell it</h3>
              <input type="text" name="fname" placeholder="First Name" />
              <input type="text" name="lname" placeholder="Last Name" />
              <input type="text" name="phone" placeholder="Phone" />
              <textarea name="address" placeholder="Address"></textarea>
              <input type="button" name="previous" class="previous action-button" value="Previous" />
              <input type="submit" name="submit" class="submit action-button" value="Submit" />
            </fieldset>
