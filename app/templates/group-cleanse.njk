{% extends "layout/_layout.njk" %}
{% block content %}
  {% set imagesDir = data.site.dir.images %}
  {% set site = data.site %}
  {% set data = data.views['groupCleanse'] %}
  {% set datepicker = data.sections.modals.datepicker %}
  {% include "components/header.njk" %}

  <!-- MAIN -->
  <main role="main" class="main-body page__group-cleanse">
    {# video hero #}
    {% set hero = data.sections.hero %}
    {% set video = data.sections.hero.video %}
    {% set modal = data.sections.modals.video %}
    <section class="clearfix container page-section section__hero">
      <div class="row">
        <div class="col-md-12">
          <div class="media-container">
            <a href="#" class="display-flex position-relative center-xs middle-xs" href="#{{modal.id}}" class="text-muted" data-toggle="modal" data-target="#{{modal.id}}" data-media="{{modal.url}}">
              <img class="img-responsive" src="{{imagesDir}}{{hero.video.poster.url}}" alt="{{hero.video.poster.alt}}" width="{{hero.video.poster.width}}" height="{{hero.video.poster.height}}" />
              <div class="center-xs middle-xs icon-container">
                <img src="{{imagesDir}}{{hero.video.play.image.url}}" alt="{{hero.video.play.image.alt}}" />
              </div>
            </a>
          </div>
        </div>
      </div>
    </section>

    {# /video hero #}

    {# group cleanse product #}
    {% set product = data.sections.product %}
    <section class="clearfix container page-section section__product">
      <div class="section-header">
        <h2 class="section-heading text-center">{{product.title}}</h2>
      </div>
      <div class="row row--reverse ">
        <div class="col-xs-12 col-sm-12 col-md-4 fill-height-or-more">
          {% include 'components/_purchase-box.njk' %}
        </div>
        <div class="col-xs-12 col-sm-12 col-md-8 text-center section__product_feature-image">
          <img src="{{imagesDir}}{{product.image.url}}" class="img-responsive" alt="{{product.image.alt}}">
        </div>
      </div>
      <div class="row gutter--top">
        <div class="col-md-12">
          <div class="body-text--lg">
            {{product.description | safe}}
          </div>
        </div>
      </div>
    </section>
    {# /group cleanse product #}

    {# group cleanse exclusive content #}
    {% set exclusive = data.sections['exclusive-content'] %}
    <section class="clearfix container page-section section__exclusive-content">
      <div class="section-header">
        <h2 class="section-heading text-center">{{exclusive.title}}</h2>
      </div>
      <div class="row row--double-gutter row--reverse center-xs">
        {# exclusive content featured module #}
        <div class="col-xs-12 col-sm-12 col-md-7 start-xs feature-module-container fill-height-or-more">
          <div class="card card-outline--2 fill-height-or-more feature-module">
            <div class="card-img">
              <img class="img-responsive img-responsive--full" src="{{imagesDir}}{{exclusive.feature.image.url}}" alt="{{exclusive.feature.image.alt}}">
            </div>
            <div class="card-block">
              <div class="row center-xs">
                <div class="col-md-8">
                  <div class="card-header">
                    <h4 class="card-heading feature-module__title">
                      {{exclusive.feature.title}}
                    </h4>
                  </div>
                  <div class="card-text body-text--large feature-module__body">{{exclusive.feature.bodyText}}</div>
                </div>
              </div>
            </div>
          </div>
        </div>
        {# /exclusive content featured module #}
        {# exclusive content icon modules #}
        <div class="col-xs-12 col-sm-12 col-md-5 between-xs icon-modules">
          {% for item in exclusive.items %}
            <div class="col-xs-12 col-sm-4 col-md-12 col-lg-12 card card-outline--2 icon-module {{item.className}}">
              <a class="icon-module__link card-block" href="{{item.href}}">
                <div class="icon-container">
                  <img src="{{imagesDir}}{{item.image.url}}" class="img-responsive" width="{{item.image.width}}" height="{{item.image.height}}" alt="{{item.title}} icon" />
                </div>
                <div class="icon-module__overlay text-center">
                  <span class="icon-module__overlay-title text-uppercase heading-text--medium">{{item.title}}</span>
                </div>
              </a>
            </div>
          {% endfor %}
        </div>
        {# /exclusive content icon modules #}
      </div>
    </section>
    {# /group cleanse exclusive content #}

    {# join us #}
    {% set join = data.sections.join %}
    <section class="clearfix container page-section section__join-us">
      <div class="bg-cover position-absolute" style="background-image:url(images/{{join.background.url}})"></div>
      <div class="col-xs-12">
        <div class="section-header">
          <h2 class="section-heading text-center">{{join.title}}</h2>
        </div>
        <div class="row form-group">
          <div class="col-xs-12 col-sm-10 col-md-7 center-block text-center body-text--lg">
            {{join.bodyText}}
          </div>
        </div>
        <div class="row">
          <form class="form center-block col-lg-8">
            <div class="form-group input-email-container">
              <input type="text" name="input-email" class="form-control form-control--block input-lg" value="" placeholder="Your Email Address">
            </div>
            <div class="row row--flex around-md">
              {% for button in join.options %}
              <div class="col-xs-12 col-sm-6 col-md-6 ">
                <div class="form-group">
                  <button class="btn btn-primary btn-lg btn-block" href role="button" data-startdate="{{button.date}}">{{button.text}}</button>
                </div>
              </div>
              {% endfor %}
            </div>
          </form>
        </div>
      </div>
    </section>
    {# /join us #}

    {# let's get social #}
    {% set social = data.sections.social %}
    <section class="clearfix container page-section section__social">
      <div class="section-header">
        <h2 class="section-heading text-center">{{social.title}}</h2>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <div class="row--flex stretch-md center-sm center-xs section__social-items">
            {% for item in social.items %}
            <div class="col-xs-10 col-sm-6 col-md-4 section__social-item">
              <div class="card-block icon-container text-center">
                <img src="{{imagesDir}}{{item.icon.url}}" alt="{{item.title}}" width="{{item.icon.width}}" height="{{item.icon.height}}" />
              </div>
              <div class="card-block card-header">
                <h4 class="card-heading heading-text--medium text-center">
                  {{item.title}}
                </h4>
              </div>
              <div class="card-block card-body">
                <div class="card-text text-center body-text--lg social-module__body">{{item.bodyText}}</div>
              </div>
            </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </section>
    {# /let's get social #}

    {# exclusive bundles #}
    {% set bundles = data.sections.bundles %}
    <section class="clearfix container page-section section__bundles">
      <div class="section-header">
        <h2 class="section-heading text-center">{{bundles.title}}</h2>
        <div class="section-subheading text-center body-text--lg">{{bundles.subtitle}}</div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <div class="row--flex price-chart price-chart__items">
            {% for item in bundles.items %}
            <div class="col-xs-12 col-sm-6 col-md-4 section__bundle-item price-chart__item">
              <div class="card card--thin-padding card-outline--2">
                <div class="card-img card-outline--bottom icon-container text-center">
                  <img class="img-responsive" src="{{imagesDir}}{{item.image.url}}" alt="{{item.title}}" width="{{item.image.width}}" height="{{item.image.height}}" />
                </div>
                <div class="card-block">
                  <h4 class="card-heading heading-text--light text-center">
                    {{item.title}}
                  </h4>
                  <div class="card-body card-text text-center social-module__body">{{item.bodyText}}</div>
                </div>
                <div class="card-block">
                  <hr>
                  <div class="row middle-xs center-xs price-chart__prices">
                    <div class="col-xs text-center price-chart__price-text">
                      <s>Total ${{item.price.total}}</s>
                    </div>
                    <div class="col col-divider--vertical"></div>
                    <div class="col-xs text-center price-chart__price-text">
                      Now ${{item.price.now}}
                    </div>
                  </div>
                </div>
                <div class="card-block">
                  <a href="{{item.link.href}}" class="text-center btn-block btn-orange-text btn-shopnow">{{item.link.text}}</a>
                </div>
              </div>
            </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </section>
    {# /exclusive bundles #}
    {% include "components/_modal-datepicker.njk" %}
    {% include "components/_modal.njk" %}
  </main>
  <!-- / MAIN -->
  {% include "components/footer.njk" %}


{% endblock %}
